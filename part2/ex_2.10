version: '3.8'

services:
  frontend:
    image: example-frontend
    container_name: frontend
    networks:
      - webapp-network

  backend:
    image: example-backend
    container_name: backend
    environment:
      - REDIS_HOST=redis
      - POSTGRES_USER=postgres
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_DATABASE=test
      - POSTGRES_HOST=database
    depends_on:
      - database
      - redis
    networks:
      - webapp-network

  database:
    image: postgres:13.2-alpine
    restart: unless-stopped
    environment:
      - POSTGRES_PASSWORD=postgres
      - POSTGRES_USER=postgres
      - POSTGRES_DB=test
    container_name: database-test
    volumes:
      - ./database-backups:/var/lib/postgresql/data
    networks:
      - webapp-network
  
  nginx:
    image: nginx:latest
    ports:
      - 80:80
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf
    depends_on:
      - frontend
      - backend
    networks:
      - webapp-network
  
  redis:
    image: redis:7.4.1
    networks:
      - webapp-network
networks:
  webapp-network:
    driver: bridge
