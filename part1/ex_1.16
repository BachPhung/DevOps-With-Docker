Dockerfile

FROM node:16-alpine AS builder

WORKDIR /app

COPY package* .

RUN npm install

COPY . .

ENV REACT_APP_BACKEND_URL=http://localhost:8080

RUN npm run build

FROM node:16-alpine AS runner

WORKDIR /app

COPY --from=builder /app/build /app/build

RUN npm install -g serve

EXPOSE 5001

CMD ["serve", "-s", "-l", "5001", "/app/build"]

#Deployment

#Login to heroku account
heroku login

#Login to Container Registry
heroku container:login

#Switch app to container mode
heroku git:remote -a country-table
heroku stack:set container --app country-table

#Push docker image
heroku container:push web --app country-table

#Deploy app
heroku container:release web --app country-table

